# Example environment variables file
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# CONVEX CONFIGURATION
# =============================================================================
# Your Convex deployment URL (get from Convex dashboard)
CONVEX_DEPLOYMENT=your-deployment-name
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_ROOT_DOMAIN=locasite.xyz
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_VERCEL_DEPLOYMENT_SUFFIX=vercel.app

# =============================================================================
# GOOGLE OAUTH (Required for Convex Auth)
# =============================================================================
# Create OAuth 2.0 credentials at: https://console.cloud.google.com/apis/credentials
# Redirect URI: https://your-deployment.convex.site/api/auth/callback/google
AUTH_GOOGLE_ID=your-google-client-id
AUTH_GOOGLE_SECRET=your-google-client-secret

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
# Google Maps API Key (enable Maps JavaScript API)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Google Business Profile API credentials
GOOGLE_BUSINESS_CLIENT_ID=your-google-business-client-id
NEXT_PUBLIC_GOOGLE_BUSINESS_CLIENT_ID=your-google-business-client-id
GOOGLE_BUSINESS_CLIENT_SECRET=your-google-business-client-secret

# Google Site Verification (optional)
GOOGLE_SITE_VERIFICATION=your-verification-code

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get from Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOKS_SECRET=whsec_...

# Price IDs from Stripe Dashboard
STRIPE_PRICE_PROFESSIONAL=price_...
STRIPE_PRICE_BUSINESS=price_...

# =============================================================================
# TINYBIRD ANALYTICS
# =============================================================================
NEXT_PUBLIC_TINYBIRD_API_URL=https://api.tinybird.co
NEXT_PUBLIC_TINYBIRD_TOKEN=your-tinybird-token

# =============================================================================
# VERCEL API (Optional - for domain management)
# =============================================================================
VERCEL_API_TOKEN=your-vercel-api-token
VERCEL_PROJECT_ID=your-project-id
VERCEL_TEAM_ID=your-team-id

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=development